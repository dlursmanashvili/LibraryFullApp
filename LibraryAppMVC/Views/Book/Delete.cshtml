@model Application.Commands.AuthorCommands.DeleteBookCommand

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <h4>DeleteBookCommand</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>

    <form method="post" action="@Url.Action("Delete", "Book", new { id = Model.Id })" onsubmit="return confirm('Are you sure you want to delete this book?');">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
