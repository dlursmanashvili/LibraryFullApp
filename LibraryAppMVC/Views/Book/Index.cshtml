@model IEnumerable<Application.Queries.BookQueries.GetBookQueryResultItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<p>
    <a asp-action="Create">Create New Book</a>
<p><a asp-action="Index" asp-controller="Author" class="btn btn-secondary">View Authors</a></p>

</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Title)</th>
            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
            <th>Book Image</th>
            <th>@Html.DisplayNameFor(model => model.First().Rating)</th>
            <th>@Html.DisplayNameFor(model => model.First().PublishDate)</th>
            <th>@Html.DisplayNameFor(model => model.First().BookinLibrary)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <img src="@item.PathImg"  />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>@Html.DisplayFor(modelItem => item.PublishDate)</td>
                <td>@Html.DisplayFor(modelItem => item.BookinLibrary)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) 
                </td>
            </tr>
        }
    </tbody>
</table>
